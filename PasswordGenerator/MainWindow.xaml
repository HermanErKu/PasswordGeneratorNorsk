<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="Passord Generator" Height="576" Width="750">
    <Grid>
        
        <Label Content="Hvor mange passord vil du generere:" Margin="15 15" FontSize="15"/>
        <TextBox x:Name="PasswordAmount" TextChanged="PasswordAmount_TextChanged" Margin="15 50" Height="50" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20"/>
        
        <Button Name="GeneratePassword" Content="Generer passord" Click="GeneratePassword_Click" Height="60" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF" Background="#000000" Margin="0,15,15,0" Padding="10,0" VerticalAlignment="Top" HorizontalAlignment="Right" MinHeight="100"/>
            
        <TextBox Name="PasswordTextbox" Height="400" VerticalAlignment="Bottom" FontSize="28">
            Passordene vil bli vist her
        </TextBox>
    </Grid>
</Window>
